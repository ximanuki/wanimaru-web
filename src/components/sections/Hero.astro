---
// Hero section component
import { Button } from '../ui/button';
import HeroContent from './HeroContent.tsx';
---

<section class="relative min-h-[80vh] md:min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-cool"></div>
  
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 left-1/4 w-32 h-32 md:w-64 md:h-64 bg-white rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-24 h-24 md:w-48 md:h-48 bg-white rounded-full blur-3xl"></div>
  </div>
  
  <!-- Content -->
  <HeroContent client:load />
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-4 md:bottom-8 left-1/2 transform -translate-x-1/2 z-10 hidden sm:block">
    <div class="animate-bounce">
      <svg class="w-5 h-5 md:w-6 md:h-6 text-primary opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>